#content-header
	.location #{location.location.name}
	a.back(href='/dashboard') &larr; back to plots
#inner-content
	.inner-header
		.title plot #{plot.info.plotnumber}
		.datasets
			a.set(href='manual/#{location._id}/#{plot._id}') sensor data
			a.set(href='manual/#{location._id}/#{plot._id}') microbes
	#plot.list
		.top
			.top-item.timestamp timestamp
			.top-item.moisture moisture
			.top-item.temp temperature

		.rows
			each row in data
				.plot.row(plot=plot._id)
					.timestamp #{row.timestamp}
					.moisture #{row.moisture}
					.temp #{row.temp}